header
	mainCenter()
	display grid
	grid-template-columns 32px fit-content(100%) auto 101px 32px	
	grid-template-rows 1em auto 1em

	h1
		font-size 2.5em
		grid-row 2
		grid-column 2
		white-space nowrap

		a#title-tag
			color darkPurple
			font-family Samba, sans-serif
			font-size inherit
			font-weight 400

	span#signature-tag
		justify-self end
		grid-row 3
		grid-column 2
		color #999
		display block
		font-size 11px

	.navigation
		grid-column 2
		li
			display inline
			list-style none

			a
				display inline-block
				text-decoration none
				color #333
				padding 22px 3px 20px 3px
				font-size 12px

				&:hover
					background-color #eee
	
	& > img
		align-self center
		grid-row 2
		grid-column 4
