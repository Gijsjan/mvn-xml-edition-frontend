#main
	mainCenter()

	a
		color bodyNavColor

#text-container
	display grid
	grid-template-rows 35px auto

	&.folium
		grid-template-columns auto totalTextWidth 32px 

		& > .text, & > .heading
			margin-left 64px

		& > #folium
			position sticky
			top 30px

		& > .text
			span.fw
				display: block
				text-align: center

	&.tekst
		grid-template-columns auto (200px - textGutterLeft) + totalTextWidth auto

		& > .text, & > .heading
			margin-left 200px

		& > .text
			span.fw
				display: none

	.heading
		text-align center
		width textWidth
		grid-column 2

		span.tekst
			font-size 20px
			font-weight 500

		.previous
			float left

		.next
			float right

	.text
		border-top 1px solid viewMenuColor
		font-family "Junicode", "Arial unicode MS", "times new roman", serif
		font-size 16px
		grid-column 2
		grid-row 2
		line-height 26px
		margin-bottom 160px
		padding-top 20px
		position relative
		text-align left
		width textWidth

		a
			text-decoration none
			color bodyNavColor
			cursor pointer

		.folionr
			font-size 11px
			position absolute
			left -200px

			h5
				color defaultGray
				font-weight normal
				font-size 11px
				padding 0
				margin 0 0 20px

			img
				width 70px
				height auto
				display block

			.select-folium
				display inline-block
				color bodyNavColor
				no-select()

		span.rubric
			display inline
			color red
		
		span.rubricated
			font-weight bold

		.mentioned
			font-style italic
			font-size 13px
			line-height 16px

		.footnote
				display block
				float right
				width 45%
				position relative
				left -2em
				color grey

		.grey
				color grey

		.green
				color rreen

		.italic
			font-style italic

		.underline
			text-decoration underline

		.bold
			font-weight bold

		span.del
			text-decoration line-through
			color blue

		p > span:not([class])
			formatAsAnnotation()

		span.del, span.add
			& > span.noteright
				formatAsAnnotation()

		span.noteright
			position absolute
			left textWidth + annotationMargin
			formatAsAnnotation()

			abbr
				display inline
				font-size 14px

		span.ital
				font-styleitalic

		span.moveleft
			position relative
				left50px

		span.restore
				borderthin solid purple

		span.romannumber
			font-variant small-caps

		span.noteleft
			border-radius 10px
			font-size 16px
			left -20px
			line-height 10px
			margin-top 6px
			padding 2px
			position absolute

		// span.folionr
		// 	position absolute
		// 	left 300px

		span.margin
			width 100px
			position absolute
			left -120px

		span.transl
			display none
			position absolute
			left 450px

		span.wvk
			display none
			position absolute
			left 450px

		span.comment
			display none
			position absolute
			left 450px

		span.intro
			display none
			position absolute
			left 450px

		span.annotwg
			display none
			position absolute
			left 450px

		span.annotvm
			display none
