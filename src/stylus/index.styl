			left 450px

		span.annotvdg
			display none
			position absolute
			left 450px

		span.annotbd
			display none
			position absolute
			left 450px

		span.hide
			display none

		.versenum,
		.linenum
			display block
			visibility hidden
			font-family bodyFont
			font-size 10px
			color defaultGray
			margin-left lineVerseNumPos
			float left

		.textnum, .folionr
			color bodyNavColor
			cursor pointer

.folium .text
	position relative

.folium span
