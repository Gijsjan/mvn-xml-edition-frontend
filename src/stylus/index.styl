body
	font-family bodyFont
	font-size 12px
	padding 0
	margin 0

#container .text.nummering
	&.vers
		.versenum
			visibility visible

	&.regel .linenum
		visibility visible

#container
	margin-top 20px
	font-size 12px

a
	text-decoration none
	color defaultGray

.center
	width mainWidth
	margin 0 auto

.no-select
	no-select()

#spinner
	align-items center
	display none
	justify-items center
	left 0
	position absolute

#views ul,	#view-options ul
	list-style none
	padding 0
	// overflow auto

#view-options ul
	overflow auto

#tabs ul
	margin 0
	overflow auto

	li
		float left
		background viewMenuColor
		color defaultGray
		height 30px
		line-height 30px
		padding 0 10px
		margin 8px 1px 0 0
		cursor pointer
		font-size 11px
		no-select()

		&.active
			background-color viewMenuActiveColor
			background-image url('../static/img/slant.png')
			background-repeat no-repeat
			background-size 100% auto
			margin-top 0
			padding-top 8px
			color viewOptionsActiveColor

		&.folio-browser.active,
		&.text-browser.active
			background-color black
			color white

#view-options,
#export-options
	display none
	background viewMenuActiveColor
	color defaultGray
	line-height 33px
	height 33px
	margin-bottom 30px

	.center
		height 33px
		background viewMenuActiveColor

	ul
		float right
		margin 5px 0
		padding 0
		li
			float left
			margin-right 30px
			padding 0 6px
			font-size 11px
			line-height 23px
			cursor pointer
			no-select()
			&:last-child
				margin-right 0

			.oplossen + .cursief
				display none

			.oplossen.active + .cursief
				display inline

			span.nummering + .opties
				display none

			span.nummering.active + .opties
				display inline

			&.active, span.active
				display inline-block
				background-color viewOptionsActiveBackground
				border-radius viewOptionsActiveRadius
				color viewOptionsActiveColor
				padding 0 6px
				font-weight 700

				&.cursief, &.vers, &.regel
					font-style italic
					font-weight normal
					text-decoration underline
					padding 0
					background-color transparent

